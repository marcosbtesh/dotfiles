# --- Navigation ---

bind-key j down
bind-key k up
bind-key h quit
bind-key l open
bind-key g home
bind-key G end

# --- General Settings ---

refresh-on-startup yes
auto-reload yes
reload-time 120 # Reloads every 2 hours in the background

# --- Browser Integration ---

# This passes the URL directly into browsh

# set-browser "browsh --url %u"

# Default to w3m (blazing fast text)

# --- Browser Integration ---

# Default to w3m (using the standard command)

browser "w3m %u"

# Macro: Press ',b' to open the article in browsh

# This switches the browser to browsh, opens it, and switches back to w3m

macro b set browser "browsh --url %u" ; open-in-browser ; set browser "w3m %u"

